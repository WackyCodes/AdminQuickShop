<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Add New Area"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorSecondary"/>



    <LinearLayout
        android:id="@+id/city_spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:background="@drawable/one_dp_border_back"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTint="@color/colorSecondary"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/ic_location_city_black_24dp"
            android:textSize="18dp"
            android:textColor="@color/colorSecondary"
            android:text="Select Your City :"/>
        <Spinner
            android:id="@+id/new_city_spinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorSecondary"
            android:textAlignment="center"
            android:tooltipText="Select City" />

    </LinearLayout>


    <EditText
        android:id="@+id/new_area_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/one_dp_border_back"
        android:drawableLeft="@drawable/ic_location_city_black_24dp"
        android:drawableTint="@color/colorSecondary"
        android:drawablePadding="4dp"
        android:hint="Enter New area Name"
        android:textStyle="normal"
        android:padding="6dp"
        android:textColor="@color/colorSecondary"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/area_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorGray"/>

        <Button
            android:id="@+id/area_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ok"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorGreen" />
    </LinearLayout>

</LinearLayout>