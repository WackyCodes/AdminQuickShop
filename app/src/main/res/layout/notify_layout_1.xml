<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/back_white_rad_8dp"
    android:layout_margin="2dp"
    android:elevation="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/notify_image"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/square_placeholder" />

<!--   Body -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notify_image"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Request a Order "
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorSecondary"/>
        <TextView
            android:id="@+id/sub_hading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:layout_marginLeft="4dp"
            android:text="Order ID : 2001245622 "
            android:textSize="18dp"
            android:textColor="@color/colorSecondary"/>
        <LinearLayout
            android:id="@+id/request_order_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/acceptBtn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Accept"
                android:elevation="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/back_white_rad_8dp"
                android:backgroundTint="@color/colorGreen"
                android:textColor="@color/colorWhite"/>
            <Button
                android:id="@+id/viewBtn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="View"
                android:elevation="4dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/back_white_rad_8dp"
                android:backgroundTint="@color/colorGray"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>


    </LinearLayout>
<!--   Body -->

</androidx.constraintlayout.widget.ConstraintLayout>