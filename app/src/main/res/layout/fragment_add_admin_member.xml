<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addMemberFrame"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ecom.letsshop.admin.userprofile.AddAdminMember">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="60dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:src="@mipmap/logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Add New Member"
                android:textColor="#000"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/x_ractangle_layout"
                android:orientation="vertical"
                android:padding="8dp">


                <EditText
                    android:id="@+id/add_member_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/back_white_one__dp"
                    android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/colorSecondary"
                    android:fontFamily="serif"
                    android:hint="Enter Name *"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="@color/colorSecondary"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/add_member_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/back_white_one__dp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/colorSecondary"
                    android:fontFamily="serif"
                    android:hint="Enter Email *"
                    android:inputType="textWebEmailAddress"
                    android:padding="8dp"
                    android:textColor="@color/colorSecondary"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/add_member_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/back_white_one__dp"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/colorSecondary"
                    android:fontFamily="serif"
                    android:hint="Enter Mobile *"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:textColor="@color/colorSecondary"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/back_white_one__dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/colorSecondary"
                        android:drawablePadding="4dp"
                        android:drawableLeft="@drawable/ic_accessible_black_24dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorSecondary"
                        android:text="Permission Type :"/>
                    <Spinner
                        android:id="@+id/type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorSecondary"
                        android:textAlignment="center"
                        android:tooltipText="Select City" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/back_white_one__dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/colorSecondary"
                        android:drawablePadding="4dp"
                        android:drawableLeft="@drawable/ic_location_city_black_24dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorSecondary"
                        android:text="Select City :"/>
                    <Spinner
                        android:id="@+id/add_member_city_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorSecondary"
                        android:textAlignment="center"
                        android:tooltipText="Select City" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/area_spinner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/back_white_one__dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/colorSecondary"
                        android:drawablePadding="4dp"
                        android:drawableLeft="@drawable/ic_location_city_black_24dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorSecondary"
                        android:text="Select Area :"/>
                    <Spinner
                        android:id="@+id/area_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorSecondary"
                        android:textAlignment="center"
                        android:tooltipText="Select City" />

                </LinearLayout>

                <Button
                    android:id="@+id/add_member_done_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="2dp"
                    android:text="Done"
                    android:textColor="@color/colorWhite" />
                <TextView
                    android:id="@+id/add_member_back_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:text=" &lt;&lt; Back"
                    android:textColor="@color/colorSecondary" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
