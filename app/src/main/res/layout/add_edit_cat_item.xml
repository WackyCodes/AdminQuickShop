<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/back_white_rad_8dp"
    android:backgroundTint="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:visibility="gone"
        android:id="@+id/category_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:elevation="3dp"
        android:layout_margin="4dp"
        android:padding="10dp"
        android:background="@drawable/back_white_round_zero_border"
        android:backgroundTint="@color/colorGray"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_add_black_24dp"/>
    <Spinner
        android:visibility="gone"
        android:id="@+id/category_index"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:prompt="@string/app_name"
        android:outlineProvider="background"
        android:dropDownSelector="@color/colorPrimary"
        android:padding="2dp"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:background="@drawable/back_white_one__dp"
        android:textColor="@color/colorPrimary"
        tools:ignore="UnusedAttribute" />


    <ImageView
        android:visibility="gone"
        android:id="@+id/banner_slider_Image"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_add_black_24dp"
        android:background="@drawable/back_white_rad_8dp"
        android:backgroundTint="@color/colorRecyclerBack"
        android:padding="14dp"/>
    <EditText
        android:visibility="gone"
        android:id="@+id/banner_bg_color_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Background Color Code"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:textAlignment="center"
        android:drawablePadding="4dp"
        android:pointerIcon="text"
        android:drawableTint="@color/colorPrimary"
        android:background="@drawable/back_white_one__dp"
        android:drawableLeft="@drawable/ic_name_black_24dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/banner_cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCEL"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:padding="2dp"/>
        <TextView
            android:id="@+id/banner_ok_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK"
            android:textAlignment="center"
            android:textColor="@color/colorSecondary"
            android:padding="2dp"/>
    </LinearLayout>


</LinearLayout>