<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/banner_slider_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/back_white_rad_8dp"
    android:backgroundTint="@color/colorRecyclerBack"
    android:elevation="3dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="fill_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/banner_ad_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="index: 2"
            android:textColor="@color/colorSecondary"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/hrViewUpImgView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_upward_black_24dp"
            android:tint="@color/colorPrimary" />

        <ImageView
            android:id="@+id/hrViewDownImgView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_downward_black_24dp"
            android:tint="@color/colorPrimary" />

        <Switch
            android:id="@+id/hrViewVisibilitySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/back_white_one__dp"
            android:backgroundTint="@color/colorSecondary"
            android:shadowColor="@color/colorPrimary"
            android:text="Visibility "
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorWhite" />

        <ImageView
            android:id="@+id/edit_layout_imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:visibility="visible"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:tint="@color/colorPrimary" />

    </LinearLayout>

    <ImageView
        android:id="@+id/banner_ad_image"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:background="@drawable/back_white_rad_8dp"
        android:padding="14dp"
        android:scaleType="fitCenter"
        android:src="@drawable/banner_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout1" />

</androidx.constraintlayout.widget.ConstraintLayout>